{
  "params": {
    "device": "cuda",

    "model_type": "rnn",
    "ensemble_size": 1,
    "trx_encoder": {
      "norm_embeddings": true,
      "embeddings_noise": 0.003,
      "embeddings": {
        "mcc_code": {"in": 200, "out": 48},
        "tr_type": {"in": 100, "out": 24}
      },
      "numeric_values": {
        "amount": "identity"
      }
    },
    "rnn": {
      "hidden_size": 48,
      "type": "gru",
      "bidir": false,
      "trainable_starter": "static"
    },
    "head": {
      "pred_all_states": false,
      "pred_all_states_mean": false,
      "explicit_lengths": false,
      "norm_input": false,
      "use_batch_norm": true
    },
    "labeled_amount": 1500,
    "unlabeled_weight": 1.0,
    "pl_threshold" : 0.8,
    "labeled": {
      "train": {
        "loss": "bce"
      }
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "clip_seq": {
        "min_len": 250,
        "max_len": 350
      },
      "batch_size": 16,
      "num_workers": 16,
      "loss": "pseudo_labeled",
      "lr": 0.005,
      "weight_decay": 0.0,
      "n_epoch": 20
    },
    "lr_scheduler": {
      "step_size": 1,
      "step_gamma": 0.90
    },
    "valid": {
      "max_seq_len": 1200,
      "batch_size": 512,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "auroc_labeled"
  },

  "save_model": false,

  "stats": {
    "path": "runs/gender_target_results.json"
  },

  "output": {
    "path": "../data/gender/target_scores",
    "valid": {
      "path": "../data/gender/target_scores/valid",
      "format": "pickle"
    },
    "test": {
      "path": "../data/gender/target_scores/test",
      "format": "pickle"
    },
    "columns": ["customer_id"]
  }
}
