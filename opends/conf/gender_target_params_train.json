{
  "params": {
    "device": "cuda",

    "model_type": "rnn",
    "ensemble_size": 1,
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "mcc_code": {"in": 200, "out": 8},
        "tr_type": {"in": 100, "out": 8}
      },
      "numeric_values": {
        "amount": "identity"
      }
    },
    "rnn": {
      "hidden_size": 48,
      "type": "gru",
      "bidir": false,
      "trainable_starter": "static"
    },
    "head": {
      "pred_all_states": false,
      "pred_all_states_mean": false,
      "explicit_lengths": false,
      "norm_input": false
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.005,
      "max_seq_len": 1200,
      "clip_seq": {
        "min_len": 250,
        "max_len": 350
      },
      "batch_size": 32,
      "num_workers": 16,
      "loss": "bce",
      "lr": 0.005,
      "weight_decay": 0.0,
      "n_epoch": 10
    },
    "lr_scheduler": {
      "step_size": 1,
      "step_gamma": 0.90
    },
    "valid": {
      "max_seq_len": 1200,
      "batch_size": 512,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "auroc"
  },

  "save_model": false,

  "output": {
    "path": "../data/gender/target_scores",
    "format": "pickle",
    "columns": ["customer_id"]
  }
}
