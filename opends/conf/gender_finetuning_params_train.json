{
  "params": {
    "device": "cuda",

    "model_type": "rnn",
    "ensemble_size": 1,
    "trx_encoder": {
      "embeddings": {
        "mcc_code": {"in": 200},
        "tr_type": {"in": 100}
      },
      "numeric_values": {
        "amount": "identity"
      }
    },
    "rnn": {
      "hidden_size": 256,
      "type": "gru",
      "bidir": false,
      "trainable_starter": "static"
    },
    "head": {
      "pred_all_states": false,
      "pred_all_states_mean": false,
      "explicit_lengths": false,
      "norm_input": false
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "clip_seq": {
        "min_len": 250,
        "max_len": 350
      },
      "batch_size": 32,
      "num_workers": 16,
      "loss": "bce",
      "lr": 0.0015,
      "optimiser_params": {
        "0.": {"lr": 0.0001},
        "1.": {"lr": 0.0001}
      },
      "weight_decay": 0.0,
      "n_epoch": 8
    },
    "lr_scheduler": {
      "step_size": 1,
      "step_gamma": 0.60
    },
    "valid": {
      "max_seq_len": 1200,
      "batch_size": 512,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "auroc",

    "pretrained_model_path": "models/gender_ml_model.p"
  },

  "save_model": false,

  "output": {
    "valid": {
      "path": "../data/gender/valid_finetuning_scores",
      "format": "pickle"
    },
    "test": {
      "path": "../data/gender/test_finetuning_scores",
      "format": "pickle"
    },
    "columns": ["customer_id"]
  }
}
