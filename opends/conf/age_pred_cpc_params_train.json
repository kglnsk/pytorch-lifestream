{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "rnn": {
      "type": "gru",
      "hidden_size": 160,
      "bidir": false,
      "trainable_starter": "static"
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "trans_date": {"in": 800, "out": 16},
        "small_group": {"in": 250, "out": 16}
      },
      "numeric_values": {
        "amount_rur": "identity"
      }
    },
    "lr_scheduler": {
      "step_size": 30,
      "step_gamma": 0.9025
    },
    "train": {
      "num_workers": 16,
      "batch_size": 32,
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "cpc": {
        "n_forward_steps": 3,
        "linear_size": 33,
        "n_negatives": 4,
        "embedding_size": 160
      },
      "lr": 0.002,
      "weight_decay": 0.0,
      "n_epoch": 3
    },
    "valid": {
      "batch_size": 32,
      "num_workers": 16,
      "max_seq_len": 1200
    }
  },

  "save_model": true,
  "model_path": {
    "model": "models/age_pred_cpc_model.p"
  }
}
