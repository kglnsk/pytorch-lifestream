{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "cpc": {
      "n_forward_steps": 12,
      "linear_size": 33,
      "n_negatives": 40,
      "embedding_size": 160
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "trans_date": {"in": 800, "out": 16},
        "small_group": {"in": 250, "out": 16}
      },
      "numeric_values": {
        "amount_rur": "identity"
      }
    },
    "lr_scheduler": {
      "step_size": 30,
      "step_gamma": 0.9025
    },
    "train": {
      "num_workers": 16,
      "batch_size": 64,
      "trx_dropout": 0.01,
      "max_seq_len": 300,
      "lr": 0.001,
      "weight_decay": 0.0,
      "n_epoch": 10
    },
    "valid": {
      "batch_size": 64,
      "num_workers": 16,
      "max_seq_len": 300
    }
  },

  "save_model": true,
  "model_path": {
    "model": "models/age_pred_cpc_model.p"
  }
}
