{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "model_type": "transf",
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "mcc_code": {"in": 200, "out": 48},
        "tr_type": {"in": 100, "out": 24}
      },
      "numeric_values": {
        "amount": "identity"
      }
    },
    "transf": {
      "train_starter": false,
      "shared_layers": false,
      "input_size": 256,
      "n_heads": 8,
      "dim_hidden": 256,
      "dropout": 0.1,
      "n_layers": 4,
      "use_positional_encoding": false,
      "max_seq_len": 400,
      "use_after_mask": false,
      "use_src_key_padding_mask": true
    },
    "head": {
      "pred_all_states": true,
      "pred_all_states_mean": false,
      "pred_flatten": true,
      "explicit_lengths": false,
      "norm_input": false,
      "use_batch_norm": false
    },
    "lr_scheduler": {
      "ReduceLROnPlateau": true,
      "patience": 15
    },
    "train": {
      "num_workers": 8,
      "batch_size": 128,
      "trx_dropout": 0.01,
      "max_seq_len": 400,
      "replace_token": {
        "replace_prob": 0.15,
        "skip_first": 1
      },
      "loss": "bce",
      "lr": 0.001,
      "weight_decay": 0.0,
      "n_epoch": 100,
      "use_best_epoch": true
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 256,
      "num_workers": 16,
      "max_seq_len": 400
    },
    "score_metric": "auroc"
  },

  "save_model": true,
  "model_path": {
    "model": "models/rtd_model_transformer.p",
    "only_encoder": false
  },

  "output": {
    "path": "data/rtd_embeddings_transformer",
    "format": "pickle",
    "columns": ["customer_id"]
  },

  "stats": {
    "path": "runs/rtd_result.json"
  }

}
