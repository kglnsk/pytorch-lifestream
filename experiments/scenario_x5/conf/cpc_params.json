{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "rnn": {
      "type": "gru",
      "hidden_size": 64,
      "bidir": false,
      "trainable_starter": "static"
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "level_4": {"in": 800, "out": 4},
        "segment_id": {"in": 150, "out": 4},
        "is_own_trademark": {"in": 3, "out": 2},
        "is_alcohol": {"in": 3, "out": 2}
      },
      "numeric_values": {
        "netto": "identity",
        "purchase_sum": "identity",
        "trn_sum_from_iss": "identity"
      },
      "positions": {
        "event_time": {"out_size":  16}
      }
    },
    "cpc": {
      "n_forward_steps": 6,
      "n_negatives": 40
    },
    "lr_scheduler": {
      "step_size": 5,
      "step_gamma": 0.5
    },
    "train": {
      "num_workers": 8,
      "batch_size": 64,
      "trx_dropout": 0.01,
      "max_seq_len": 800,
      "lr": 0.001,
      "weight_decay": 0.0,
      "n_epoch": 10
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 64,
      "num_workers": 16,
      "max_seq_len": 800
    }
  },

  "save_model": true,
  "model_path": {
    "model": "models/cpc_model.p"
  },

  "output": {
    "path": "data/cpc_embeddings",
    "format": "pickle",
    "columns": ["client_id"]
  },

  "stats": {
    "path": "runs/cpc_result.json"
  }

}
