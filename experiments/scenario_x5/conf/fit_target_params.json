{
  "col_target_name": "target_gender",

  "params": {
    "device": "cuda",

    "model_type": "transf",
    "ensemble_size": 1,
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "level_4": {"in": 800, "out": 4},
        "segment_id": {"in": 150, "out": 4},
        "is_own_trademark": {"in": 3, "out": 2},
        "is_alcohol": {"in": 3, "out": 2}
      },
      "numeric_values": {
        "netto": "identity",
        "purchase_sum": "identity",
        "trn_sum_from_iss": "identity"
      },
      "positions": {
        "event_time": {"out_size":  16}
      },
    },
    "transf": {
      "train_starter": true,
      "shared_layers": false,
      "input_size": 16,
      "n_heads": 8,
      "dim_hidden": 64,
      "dropout": 0.01,
      "n_layers": 4,
      "use_positional_encoding": false,
      "max_seq_len": 800,
      "use_after_mask": false,
      "use_src_key_padding_mask": false
    },
    "head": {
      "pred_all_states": false,
      "pred_all_states_mean": false,
      "explicit_lengths": false,
      "norm_input": false,
      "num_classes": 1,
      "use_batch_norm": false
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.01,
      "max_seq_len": 800,
      "batch_size": 32,
      "num_workers": 16,
      "loss": "bce",
      "lr": 0.001,
      "weight_decay": 0.0,
      "n_epoch": 10
    },
    "lr_scheduler": {
      "step_size": 100,
      "step_gamma": 0.5
    },
    "valid": {
      "max_seq_len": 800,
      "batch_size": 256,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "auroc"
  },

  "save_model": false,

  "output": {
    "valid": {
      "path": "data/target_scores/valid",
      "format": "pickle"
    },
    "test": {
      "path": "data/target_scores/test",
      "format": "pickle"
    },
    "columns": ["client_id"]
  }
}
