{
  "col_target_name": "target_gender",

  "params": {
    "device": "cuda",

    "model_type": "rnn",
    "ensemble_size": 1,
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "level_2": {"in": 45, "out": 2},
        "level_3": {"in": 200, "out": 4},
        "level_4": {"in": 800, "out": 4},
        "segment_id": {"in": 120, "out": 4},
        "is_own_trademark": {"in": 3, "out": 2},
        "is_alcohol": {"in": 3, "out": 2},
        "brand_id": {"in": 2000, "out": 2},
        "vendor_id": {"in": 1500, "out": 2}
      },
      "numeric_values": {
        "netto": "identity",
        "purchase_sum": "identity",
        "trn_sum_from_iss": "identity",
        "product_quantity":  "identity",
        "trn_sum_from_red": "identity",
        "regular_points_received": "identity",
        "regular_points_spent":  "identity"
      },
      "positions": {
        "event_time": {"out_size":  16}
      }
    },
    "rnn": {
      "type": "gru",
      "hidden_size": 64,
      "bidir": false,
      "trainable_starter": "static"
    },
    "head": {
      "pred_all_states": false,
      "pred_all_states_mean": false,
      "explicit_lengths": false,
      "norm_input": false,
      "num_classes": 1,
      "use_batch_norm": false
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.01,
      "max_seq_len": 800,
      "batch_size": 32,
      "num_workers": 16,
      "loss": "bce",
      "lr": 0.001,
      "weight_decay": 0.0,
      "n_epoch": 6
    },
    "lr_scheduler": {
      "step_size": 100,
      "step_gamma": 0.5
    },
    "valid": {
      "max_seq_len": 800,
      "batch_size": 256,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "auroc"
  },

  "save_model": false,

  "output": {
    "valid": {
      "path": "data/target_scores_rnn/valid",
      "format": "pickle"
    },
    "test": {
      "path": "data/target_scores_rnn/test",
      "format": "pickle"
    },
    "columns": ["client_id"]
  }
}
