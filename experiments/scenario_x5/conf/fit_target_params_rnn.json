{
  "col_target_name": "target_age",

  "params": {
    "device": "cuda",

    "model_type": "rnn",
    "ensemble_size": 1,
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "level_3": {"in": 200, "out": 4},
        "level_4": {"in": 800, "out": 4},
        "segment_id": {"in": 120, "out": 4}
      },
      "numeric_values": {
        "trn_sum_from_iss": "identity",
        "netto": "identity",
        "product_quantity":  "identity",
        "regular_points_received": "identity",
      },
      "_positions": {
        "event_time": {"out_size":  16}
      }
    },
    "rnn": {
      "type": "gru",
      "hidden_size": 64,
      "bidir": false,
      "trainable_starter": "static"
    },
    "head": {
      "pred_all_states": false,
      "pred_all_states_mean": false,
      "explicit_lengths": false,
      "norm_input": false,
      "num_classes": 4,
      "use_batch_norm": false
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.03,
      "same_time_shuffle": false,
      "all_time_shuffle": true,
      "max_seq_len": 800,
      "batch_size": 32,
      "num_workers": 16,
      "loss": "NLLLoss",
      "lr": 0.002,
      "weight_decay": 0.0,
      "n_epoch": 7,
    },
    "lr_scheduler": {
      "step_size": 3,
      "step_gamma": 0.5
    },
    "valid": {
      "max_seq_len": 800,
      "batch_size": 256,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "accuracy"
  },

  "save_model": false,

  "output": {
    "valid": {
      "path": "data/target_scores_rnn/valid",
      "format": "pickle"
    },
    "test": {
      "path": "data/target_scores_rnn/test",
      "format": "pickle"
    },
    "columns": ["client_id"]
  }
}
