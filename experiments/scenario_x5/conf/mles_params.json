{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "model_type": "transf",
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "level_4": {"in": 800, "out": 4},
        "segment_id": {"in": 150, "out": 4},
        "is_own_trademark": {"in": 3, "out": 2},
        "is_alcohol": {"in": 3, "out": 2}
      },
      "numeric_values": {
        "netto": "identity",
        "purchase_sum": "identity",
        "trn_sum_from_iss": "identity"
      },
      "positions": {
        "event_time": {"out_size":  16}
      }
    },
    "transf": {
      "train_starter": true,
      "shared_layers": false,
      "input_size": 16,
      "n_heads": 4,
      "dim_hidden": 64,
      "dropout": 0.01,
      "n_layers": 4,
      "use_positional_encoding": false,
      "max_seq_len": 800,
      "use_after_mask": false,
      "use_src_key_padding_mask": false
    },
    "use_normalization_layer": true,
    "lr_scheduler": {
      "step_size": 10,
      "step_gamma": 0.9025
    },
    "train": {
      "num_workers": 8,
      "batch_size": 128,
      "split_strategy": {
        "split_strategy": "SampleSlices",
        "split_count": 5,
        "cnt_min": 30,
        "cnt_max": 180
      },
      "sampling_strategy": "HardNegativePair",
      "trx_dropout": 0.01,
      "max_seq_len": 800,
      "neg_count": 5,
      "loss": "ContrastiveLoss",
      "margin": 0.5,
      "lr": 0.002,
      "weight_decay": 0.0,
      "n_epoch": 10,
      "_checkpoints": {
        "save_interval": 15,
        "n_saved": 1000,
        "dirname": "models/mles_checkpoints/",
        "filename_prefix": "mles",
        "create_dir": true
      }
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 256,
      "num_workers": 16,
      "split_strategy": {
        "split_strategy": "SampleSlices",
        "split_count": 5,
        "cnt_min": 30,
        "cnt_max": 180
      },
      "max_seq_len": 800
    }
  },

  "save_model": true,
  "model_path": {
    "model": "models/mles_model.p",
    "only_encoder": false
  },

  "output": {
    "path": "data/mles_embeddings",
    "format": "pickle",
    "columns": ["client_id"]
  },

  "stats": {
    "path": "runs/mles_result.json"
  }

}
