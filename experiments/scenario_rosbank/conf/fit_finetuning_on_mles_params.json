{
  "params": {
    "device": "cuda",

    "model_type": "rnn",
    "ensemble_size": 1,
    "trx_encoder": {
      "embeddings": {
        "mcc": {"in": 100, "out": 16},
        "channel_type": {"in": 4, "out": 2},
        "currency": {"in": 4, "out": 2},
        "trx_category": {"in": 10, "out": 2}
      },
      "numeric_values": {
        "amount": "identity"
      }
    },
    "rnn": {
      "hidden_size": 512
    },
    "train": {
      "random_neg": false,
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "clip_seq": {
        "min_len": 250,
        "max_len": 350
      },
      "batch_size": 32,
      "num_workers": 16,
      "loss": "bce",
      "lr": 0.0015,
      "optimiser_params": {
        "0.": {"lr": 0.0001},
        "1.": {"lr": 0.0001}
      },
      "weight_decay": 0.0,
      "n_epoch": 8
    },
    "lr_scheduler": {
      "step_size": 1,
      "step_gamma": 0.40
    },
    "valid": {
      "max_seq_len": 1200,
      "batch_size": 512,
      "num_workers": 8
    },
    "norm_scores": false,
    "score_metric": "auroc",

    "pretrained_model_path": "models/mles_model.p",
    "use_batch_norm": true
  },

  "save_model": false,

  "output": {
    "valid": {
      "path": "data/mles_finetuning_scores/valid",
      "format": "pickle"
    },
    "test": {
      "path": "data/mles_finetuning_scores/test",
      "format": "pickle"
    },
    "columns": ["cl_id"]
  },

  "stats": {
    "model_name": "nn",
    "feature_name": "mles_finetuning",
    "path": "results/mles_finetuning_results.json"
  }
}
