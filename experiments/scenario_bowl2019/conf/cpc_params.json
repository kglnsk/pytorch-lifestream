{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "rnn": {
      "type": "gru",
      "hidden_size": 512,
      "bidir": false,
      "trainable_starter": "static"
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "event_id": {"in": 500, "out": 64},
        "event_code": {"in": 50, "out": 64},
        "event_type": {"in": 6, "out": 32},
        "title": {"in": 50, "out": 64},
        "world": {"in": 6, "out": 32}
      },
      "numeric_values": {
      }
    },
    "cpc": {
      "n_forward_steps": 6,
      "n_negatives": 40
    },
    "lr_scheduler": {
      "step_size": 5,
      "step_gamma": 0.5
    },
    "train": {
      "num_workers": 16,
      "batch_size": 64,
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "lr": 0.002,
      "weight_decay": 0.0,
      "n_epoch": 15
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 64,
      "num_workers": 16,
      "max_seq_len": 1200
    }
  },

  "stats": {
    "path": "runs/bowl2019_cpc_result.json"
  },

  "save_model": true,
  "model_path": {
    "model": "models/cpc_model.p"
  },

  "output": {
    "path": "data/cpc_embeddings",
    "format": "pickle",
    "columns": ["game_session"]
  }
}
